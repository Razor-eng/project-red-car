{
  "kind": "collectionType",
  "collectionName": "cars",
  "info": {
    "singularName": "car",
    "pluralName": "cars",
    "displayName": "Car",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "name": {
      "type": "string"
    },
    "model": {
      "type": "string"
    },
    "price": {
      "type": "string"
    },
    "installment": {
      "type": "string"
    },
    "monthly_price": {
      "type": "string"
    },
    "years": {
      "type": "string"
    },
    "km_per_year": {
      "type": "string"
    },
    "advance": {
      "type": "string"
    },
    "isCarDetails": {
      "type": "boolean"
    },
    "carImages": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": [
        "images",
        "files"
      ]
    },
    "carDetail": {
      "displayName": "Car Detail",
      "type": "component",
      "repeatable": true,
      "component": "common.car-detail"
    },
    "category": {
      "type": "enumeration",
      "enum": [
        "SUV",
        "Coupe"
      ]
    },
    "transmission": {
      "type": "enumeration",
      "enum": [
        "Automatico",
        "Manuale"
      ]
    },
    "fuelType": {
      "type": "enumeration",
      "enum": [
        "Ibrida Benzina",
        "Ibrida Petrol"
      ]
    },
    "manufacturing_date": {
      "type": "string"
    },
    "mileage": {
      "type": "integer",
      "default": 0,
      "min": 0
    },
    "details": {
      "displayName": "Detail",
      "type": "component",
      "repeatable": true,
      "component": "common.detail"
    }
  }
}
